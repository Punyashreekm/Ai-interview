PORT=5000
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/interview-prep
JWT_SECRET=your_jwt_secret_key_here

# OpenAI Configuration (Primary)
OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face Configuration (Free Fallback)
HUGGING_FACE_API_KEY=your_hugging_face_api_key_here

# Cloudinary Configuration (Recommended)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# AWS S3 Configuration (Optional - only if not using Cloudinary)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Note: If neither Cloudinary nor AWS S3 is configured, files will be stored locally in the 'uploads' folder
